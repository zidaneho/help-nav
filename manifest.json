{
  "name": "Spotlight",
  "description": "Voice-guided web navigation assistant for easy browsing",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "<all_urls>",
    "https://api.fish.audio/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assistant-panel.js", "cursor-guide.js", "content.js"],
      "css": ["assistant-panel.css", "cursor-guide.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/logo16.png",
      "32": "/images/logo32.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "options_page": "options.html",

  "web_accessible_resources": [
    {
      "resources": ["images/logo.svg", "assistant-panel.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
